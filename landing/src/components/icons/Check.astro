---
interface Props {
  class?: string;
  size?: number;
}

const { class: className = '', size = 24 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  aria-hidden="true"
>
  <circle cx="12" cy="12" r="10" />
  <polyline points="9 12 11 14 15 10" />
</svg>
