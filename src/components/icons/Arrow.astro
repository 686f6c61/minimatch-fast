---
interface Props {
  class?: string;
  size?: number;
  direction?: 'right' | 'left' | 'up' | 'down';
}

const { class: className = '', size = 24, direction = 'right' } = Astro.props;

const rotations = {
  right: 0,
  down: 90,
  left: 180,
  up: 270
};
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  style={`transform: rotate(${rotations[direction]}deg)`}
  aria-hidden="true"
>
  <line x1="5" y1="12" x2="19" y2="12" />
  <polyline points="12 5 19 12 12 19" />
</svg>
